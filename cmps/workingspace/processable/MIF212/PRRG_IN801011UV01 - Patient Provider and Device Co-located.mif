<?xml version="1.0" encoding="UTF-8"?>
<mif:interaction xmlns:mif="urn:hl7-org:v3/mif2" schemaVersion="2.1.2" name="801011"
                 title="Rtls Event Notification Observe Co-located Patient Provider Device">
   <mif:businessName name="Patient Provider and Device Co-located"/>
   <mif:packageLocation root="DEFN" section="AM" subSection="PR" domain="RG" artifact="IN"
                        realmNamespace="UV"
                        version="01"
                        id="801011"/>
   <mif:annotations>
      <mif:documentation>
         <mif:description>
            <mif:text>This notification is sent from a real time location tracking system to convey that a patient, a provider and a device are now in the same location. Locally defined business rules determine which locations are of interest and how long the resources need to be in that location to trigger this interaction. In this interaction the <html:b xmlns:html="http://www.w3.org/1999/xhtml">PositionObservationEvent </html:b>has <html:i xmlns:html="http://www.w3.org/1999/xhtml">three </html:i>  
               <html:b xmlns:html="http://www.w3.org/1999/xhtml">subject </html:b>participations -- one to <html:b xmlns:html="http://www.w3.org/1999/xhtml">Device</html:b>, one to <html:b xmlns:html="http://www.w3.org/1999/xhtml">Person </html:b>playing the role of <html:b xmlns:html="http://www.w3.org/1999/xhtml">HealthCareProvider </html:b>and one to <html:b xmlns:html="http://www.w3.org/1999/xhtml">LivingSubjectChoice </html:b>with either <html:b xmlns:html="http://www.w3.org/1999/xhtml">Person </html:b>or <html:b xmlns:html="http://www.w3.org/1999/xhtml">NonPersonLivingSubject </html:b>playing the role of <html:b xmlns:html="http://www.w3.org/1999/xhtml">Patient</html:b>.</mif:text>
         </mif:description>
      </mif:documentation>
   </mif:annotations>
   <mif:invokingTriggerEvent root="DEFN" section="AM" subSection="PR" domain="RG" artifact="TE"
                             realmNamespace="UV"
                             version="01"
                             id="801011"/>
   <mif:argumentMessage root="DEFN" section="IM" subSection="MC" domain="CI" artifact="MT"
                        realmNamespace="UV"
                        version="01"
                        id="000100">
      <mif:parameterModel parameterName="ControlActProcess" root="DEFN" section="IM" subSection="MC"
                          domain="AI"
                          artifact="MT"
                          realmNamespace="UV"
                          version="01"
                          id="700201"
                          traversalName="controlActProcess">
         <mif:parameterModel parameterName="Act" root="DEFN" section="AM" subSection="PR" domain="RG"
                             artifact="MT"
                             realmNamespace="UV"
                             version="01"
                             id="801003"
                             traversalName="positionObservationEvent"/>
      </mif:parameterModel>
   </mif:argumentMessage>
</mif:interaction>