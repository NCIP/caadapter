<?xml version="1.0" encoding="UTF-8"?>
<mif:interaction xmlns:mif="urn:hl7-org:v3/mif2" schemaVersion="2.1.2" name="002110"
                 title="Care Transfer Request Activate">
   <mif:businessName name="Notify Care Transfer Request"/>
   <mif:packageLocation root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                        realmNamespace="UV"
                        version="01"
                        id="002110"/>
   <mif:annotations>
      <mif:documentation>
         <mif:description>
            <mif:text>The interaction notifies a receiver that a sender has requested a healthcare provider to take on the responsibility for care for a subject and that the requested care transfer has been activated and is awaiting fulfillment.</mif:text>
         </mif:description>
      </mif:documentation>
   </mif:annotations>
   <mif:invokingTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                             realmNamespace="UV"
                             version="01"
                             id="002100"/>
   <mif:argumentMessage root="DEFN" section="IM" subSection="MC" domain="CI" artifact="MT"
                        realmNamespace="UV"
                        version="01"
                        id="000100">
      <mif:parameterModel parameterName="ControlActProcess" root="DEFN" section="IM" subSection="MC"
                          domain="AI"
                          artifact="MT"
                          realmNamespace="UV"
                          version="01"
                          id="700201"
                          traversalName="controlActProcess">
         <mif:parameterModel parameterName="Act" root="DEFN" section="HM" subSection="RE" domain="PC"
                             artifact="MT"
                             realmNamespace="UV"
                             version="01"
                             id="002000"
                             traversalName="careProvisionRequest"/>
      </mif:parameterModel>
   </mif:argumentMessage>
   <mif:receiverResponsibilities>
      <mif:reason>
         <html:text xmlns:html="http://www.w3.org/1999/xhtml">  
                  <html:p>The fulfiller has completed the responsibility of care provision in fulfillment of request. The fulfiller uses this when it wishes to acknowledge a request with the care transfer being requested.</html:p>  
               </html:text>
      </mif:reason>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="004410"/>
   </mif:receiverResponsibilities>
   <mif:receiverResponsibilities>
      <mif:reason>
         <html:text xmlns:html="http://www.w3.org/1999/xhtml">The fulfiller does not agree to perform the request</html:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="002040"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="002040"/>
   </mif:receiverResponsibilities>
   <mif:receiverResponsibilities>
      <mif:reason>
         <html:text xmlns:html="http://www.w3.org/1999/xhtml">  
                  <html:p>The fulfiller agrees to perform the request</html:p>  
               </html:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="003130"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="003130"/>
   </mif:receiverResponsibilities>
   <mif:receiverResponsibilities>
      <mif:reason>
         <html:text xmlns:html="http://www.w3.org/1999/xhtml">  
                  <html:p>The fulfiller has begun the responsibility of care provision in fulfillment of the request. The fulfiller uses this when it wishes to acknowledge a request with the care transfer being requested.</html:p>  
               </html:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="004110"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="004110"/>
   </mif:receiverResponsibilities>
</mif:interaction>