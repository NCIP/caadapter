<?xml version="1.0" encoding="UTF-8"?>
<mif:interaction xmlns:mif="urn:hl7-org:v3/mif2" schemaVersion="2.1.2" name="402004"
                 title="Inpatient Encounter Event Abort Notification">
   <mif:businessName name="Inpatient Encounter Aborted"/>
   <mif:packageLocation root="DEFN" section="AM" subSection="PR" domain="PA" artifact="IN"
                        realmNamespace="UV"
                        version="02"
                        id="402004"/>
   <mif:annotations>
      <mif:documentation>
         <mif:description>
            <mif:text>An inpatient encounter informer sends this <html:b xmlns:html="http://www.w3.org/1999/xhtml">notification </html:b>after an inpatient encounter is aborted prior to completion. This could have been result of action by either the practitioner or the patient. The payload contains information about the end of the encounter and the reason the encounter was aborted.</mif:text>
         </mif:description>
      </mif:documentation>
   </mif:annotations>
   <mif:invokingTriggerEvent root="DEFN" section="AM" subSection="PR" domain="PA" artifact="TE"
                             realmNamespace="UV"
                             version="02"
                             id="402004"/>
