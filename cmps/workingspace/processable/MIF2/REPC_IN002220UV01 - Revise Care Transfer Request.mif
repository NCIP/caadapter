<?xml version="1.0" encoding="UTF-8"?>
<mif:interaction xmlns:mif="urn:hl7-org:v3/mif2" schemaVersion="2.1.5" name="002220"
                 title="Care Transfer Request Revise Fulfillment Request">
   <mif:businessName name="Revise Care Transfer Request"/>
   <mif:packageLocation root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                        realmNamespace="UV"
                        version="01"
                        id="002220"/>
   <mif:annotations>
      <mif:documentation>
         <mif:description>
            <mif:text>The interaction is used to request the receiver to accept a revision of a previously accepted responsibility of care the subject. The interaction has two possible receiver responsibility types. The first, Care Transfer Promise is used by the receiving application role when it accepts the revised request. The second receiver responsibility is Reject Care Transfer and is used by the fulfiller to reject the revised request. </mif:text>
         </mif:description>
      </mif:documentation>
   </mif:annotations>
   <mif:invokingTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                             realmNamespace="UV"
                             version="01"
                             id="002200"/>
   <mif:argumentMessage root="DEFN" section="IM" subSection="MC" domain="CI" artifact="MT"
                        realmNamespace="UV"
                        version="01"
                        id="000100">
      <mif:parameterModel parameterName="ControlActProcess" root="DEFN" section="IM" subSection="MC"
                          domain="AI"
                          artifact="MT"
                          realmNamespace="UV"
                          version="01"
                          id="700201"
                          traversalName="controlActProcess">
         <mif:parameterModel parameterName="Act" root="DEFN" section="HM" subSection="RE" domain="PC"
                             artifact="MT"
                             realmNamespace="UV"
                             version="01"
                             id="002000"
                             traversalName="careProvisionRequest"/>
      </mif:parameterModel>
   </mif:argumentMessage>
   <mif:receiverResponsibilities>
      <mif:reason>
         <mif:text>  
                  <mif:p>The fulfiller does not or cannot accept the revised care transfer request.</mif:p>  
               </mif:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="002040"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="002040"/>
   </mif:receiverResponsibilities>
   <mif:receiverResponsibilities>
      <mif:reason>
         <mif:text>The fulfiller has not yet promised to accept the care transfer request that is being revised, but now accepts the revised care transfer request.</mif:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="003130"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="003130"/>
   </mif:receiverResponsibilities>
   <mif:receiverResponsibilities>
      <mif:reason>
         <mif:text>The fulfiller accepts the replaced care transfer request.</mif:text>
      </mif:reason>
      <mif:invokeInteraction root="DEFN" section="HM" subSection="RE" domain="PC" artifact="IN"
                             realmNamespace="UV"
                             version="01"
                             id="003930"/>
      <mif:invokeTriggerEvent root="DEFN" section="HM" subSection="RE" domain="PC" artifact="TE"
                              realmNamespace="UV"
                              version="01"
                              id="003933"/>
   </mif:receiverResponsibilities>
</mif:interaction>